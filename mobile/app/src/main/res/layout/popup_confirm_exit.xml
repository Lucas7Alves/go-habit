<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_confirm_exit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_confirm_popup"
    android:padding="24dp"
    android:layout_marginHorizontal="32dp"
    android:elevation="10dp"
    android:gravity="center"
    android:layout_gravity="center">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tem certeza que deseja sair da toca?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center" />

    <!-- Botões lado a lado -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="Sim"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:backgroundTint="#3E1F91"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="Não"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:backgroundTint="#3E1F91" />
    </LinearLayout>

    <!-- Texto explicativo -->
    <TextView
        android:id="@+id/tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vale lembrar que caso você saia de uma toca precisará esperar uma semana para entrar em outra."
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_gravity="center"
        android:textAlignment="center" />

</LinearLayout>
