<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextDefault" parent="TextAppearance.AppCompat">
        <item name="android:background">@android:drawable/edit_text</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">44sp</item>
        <item name="android:layout_marginEnd">44sp</item>
        <item name="android:layout_marginBottom">35sp</item>
        <item name="android:padding">12sp</item>
    </style>

    <!-- splash theme-->
    <style name="Theme.App.Starting" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/malhado_boy</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TitlePage" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#996AF9</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonDefault" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>

        <item name="android:elevation">8dp</item>
        <item name="android:translationZ">6dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:layout_marginStart">64sp</item>
        <item name="android:layout_marginEnd">64sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/voltar_button</item>
        <item name="android:src">@drawable/ic_arrow_left</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="contentDescription">Voltar</item>
    </style>

    <style name="ConfigButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width"> wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/voltar_button</item>
        <item name="android:src">@drawable/bg_popup_settings</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="contentDescription">Voltar</item>
    </style>

    <!-- Chip de dias -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="chipSurfaceColor">#FAFAFA</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Adicione os estilos aqui dentro -->
    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">#7A3EFF</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:theme">@style/SpinnerWhiteArrow</item>
    </style>

    <style name="SpinnerWhiteArrow" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:colorControlNormal">#FFFFFF</item>
    </style>

    <style name="MetaButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetLeft">0dp</item>
    </style>


</resources>